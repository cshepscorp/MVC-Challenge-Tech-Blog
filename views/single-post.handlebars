{{!-- {{> post-data post }} --}}

<article class="post">
  <div class="title">
    <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
  </div>
  <div class="meta">
    <em>Posted by {{post.user.username}} on {{format_date post.created_at}}</em>
  </div>
  <div class="body">
    {{post.post_text}}
  </div>
</article>

{{!-- add comment --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

{{> comments post.comments}}

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}