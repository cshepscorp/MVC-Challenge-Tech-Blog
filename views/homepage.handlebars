<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post.id}}" target="_blank">{{post.title}}</a>
        <span>Posted by {{post.user.username}} on {{post.created_at}}</span>
      </div>
      <div class="meta">
          <span>{{post.post_text}}</span>
      </div>
    </article>
  </li>
  {{/each}}
</ol>